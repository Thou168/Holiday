<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<android.support.v7.widget.Toolbar
    android:id="@+id/toolbar_Account"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3EA2F7"
    >
    <TextView
        android:id="@+id/tvBack_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/arrow_left_black_24dp"
        android:gravity="center_vertical"
        android:textColor="#ffff"
        android:textSize="20dp"
        android:text="Back"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="My Account"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:gravity="center_vertical"/>
</android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgType"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_null"
                    android:background="@drawable/underline"/>

                <TextView
                    android:id="@+id/tvType"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@+id/imgType"
                    android:gravity="center_vertical"
                    android:hint="Type"
                    android:paddingLeft="10dp"
                    android:textSize="18dp"
                    android:background="@drawable/underline"
                    android:drawableRight="@drawable/arrow_right_black_24dp"/>

                <ImageView
                    android:id="@+id/imgUsername"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tvType"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_null"
                    android:background="@drawable/underline"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilUsername"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tvType"
                    android:layout_toRightOf="@+id/imgUsername"
                    android:background="@drawable/underline">

                    <EditText
                        android:id="@+id/etUsername"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:hint="Username"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgGender"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_null"
                    android:layout_below="@+id/tilUsername"
                    android:background="@drawable/underline"/>
                <TextView
                    android:id="@+id/tvGender"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tilUsername"
                    android:layout_toRightOf="@+id/imgGender"
                    android:hint="Gender"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/underline"
                    android:drawableRight="@drawable/arrow_right_black_24dp"/>

                <ImageView
                    android:id="@+id/imgDob"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgGender"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_null"
                    android:background="@drawable/underline"/>
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilDob"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgGender"
                    android:layout_toRightOf="@+id/imgGender"
                    android:background="@drawable/underline">

                    <EditText
                        android:id="@+id/etDOB"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:hint="Date of Birth"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgPob"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_null"
                    android:layout_below="@+id/tilDob"
                    android:background="@drawable/underline"/>
                <TextView
                    android:id="@+id/tvPob"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/tilDob"
                    android:layout_toRightOf="@+id/imgPob"
                    android:hint="Place of Birth"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:drawableRight="@drawable/arrow_right_black_24dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/underline"/>

                <ImageView
                    android:id="@+id/imgMarried"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_null"
                    android:layout_below="@+id/imgPob"
                    android:background="@drawable/underline"/>
                <TextView
                    android:id="@+id/tvMarried"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgPob"
                    android:layout_toRightOf="@+id/imgMarried"
                    android:hint="Married Status"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:drawableRight="@drawable/arrow_right_black_24dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/underline"/>

                <ImageView
                    android:id="@+id/imgWingNumber"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgMarried"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_null"
                    android:background="@drawable/underline"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilWingNumber"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgMarried"
                    android:layout_toRightOf="@+id/imgWingNumber"
                    android:background="@drawable/underline"
                    >

                    <EditText
                        android:id="@+id/etWingNumber"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:hint="Wing Account Number"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgWingName"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgWingNumber"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_null"
                    android:background="@drawable/underline"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilWingName"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgWingNumber"
                    android:layout_toRightOf="@+id/imgWingName"
                    android:background="@drawable/underline"
                    >

                    <EditText
                        android:id="@+id/etWingName"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:hint="Wing Account Name"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgAccount_Phone"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgWingName"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_null"
                    android:background="@drawable/underline"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilAccount_phone"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgWingName"
                    android:layout_toRightOf="@+id/imgAccount_Phone"
                    android:background="@drawable/underline"
                    >

                    <EditText
                        android:id="@+id/etAccount_Phone"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:hint="Phone"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgLocation"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_null"
                    android:layout_below="@+id/imgAccount_Phone"
                    android:background="@drawable/underline"
                    />
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgAccount_Phone"
                    android:layout_toRightOf="@+id/imgLocation"
                    android:hint="Location"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:drawableRight="@drawable/arrow_right_black_24dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/underline"
                    />

                <ImageView
                    android:id="@+id/imgJob"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgLocation"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_null"
                    android:background="@drawable/underline"
                    />
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/tilJob"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgLocation"
                    android:layout_toRightOf="@+id/imgJob"
                    android:background="@drawable/underline"
                    >

                    <EditText
                        android:id="@+id/etJob"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:hint="Job"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        />
                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/imgAccount_Address"
                    android:layout_width="20dp"
                    android:layout_height="45dp"
                    android:src="@drawable/icon_null"
                    android:layout_below="@+id/imgJob"
                    android:background="@drawable/underline"
                    />
                <TextView
                    android:id="@+id/tvAccount_Address"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/imgJob"
                    android:layout_toRightOf="@+id/imgAccount_Address"
                    android:hint="Address"
                    android:textSize="18dp"
                    android:paddingLeft="10dp"
                    android:drawableRight="@drawable/arrow_right_black_24dp"
                    android:gravity="center_vertical"
                    android:background="@drawable/underline"
                    />

                <fragment
                    android:id="@+id/map_Account"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_below="@id/tvAccount_Address"
                  />

                <Button
                    android:id="@+id/btn_EditAccount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:text="Submit"
                    android:layout_below="@+id/map_Account"
                    android:background="@drawable/corner_orange"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>